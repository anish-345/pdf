<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Search">

        <ListPreference
            app:key="search_engine"
            app:title="Search engine"
            app:defaultValue="google"
            app:entries="@array/search_engine_entries"
            app:entryValues="@array/search_engine_values"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Privacy">

        <Preference
            app:key="clear_data"
            app:title="Clear browsing data"
            app:summary="Clear history, cookies, and cache" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Adblocker">

        <Preference
            app:key="adblocker_settings"
            app:title="Adblocker Settings"
            app:summary="Configure adblocker rules and settings">
            <intent android:action="android.intent.action.VIEW"
                android:targetPackage="com.example.superfastbrowser"
                android:targetClass="com.example.superfastbrowser.AdblockerSettingsActivity" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
